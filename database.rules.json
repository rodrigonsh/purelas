{
  "rules": {
    ".read": false,
    ".write": false,

    "reports":
    {
      ".read": true,
    },

    "geofire":
    {
      ".indexOn": "g",
      ".read": true,
      ".write": true,
    },

    "users":
      {

        ".read": false,

        "$uid":
            {
              ".read": "auth !== null && auth.uid == $uid",
              ".write":  "auth !== null && auth.uid == $uid",
            }

      }

  }
}
