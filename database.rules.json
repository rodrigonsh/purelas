{
  "rules": {
    ".read": false,
    ".write": false,

    "reports":
    {
      ".read": true,
      "$uid":
      {
        ".write":  "auth !== null && auth.uid == $uid",
      }
    },

    "opinions":
    {
      ".read": false,
      ".write": true
    },

    "geoReports":
    {
      ".indexOn": "g",
      ".read": true,
      ".write": false,
      "$uid":
      {
        ".write":  "auth !== null && auth.uid == $uid",
      }
    },

    "users":
    {

      ".read": false,

      "$uid":
      {
        ".read": "auth !== null && auth.uid == $uid",
        ".write":  "auth !== null && auth.uid == $uid",
      }

    }

  }
}
